<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical" >
    
    <EditText 
        android:id="@+id/et_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:hint="输入店铺的名字"/>
    
    <EditText
        android:id="@+id/et_shop_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:hint="请输入账号"/>
    
    <EditText 
        android:id="@+id/et_shop_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:hint="请输入店铺的类型"/>
    
    <EditText 
        android:id="@+id/et_shop_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:hint="请输入店铺的位置"/>
    
    <EditText 
        android:id="@+id/et_shop_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:lines="2"
        android:ellipsize="middle"
        android:layout_margin="3dp"
        android:hint="请输入店铺简介"/>
    
    <EditText 
        android:id="@+id/et_shop_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:lines="2"
        android:hint="请输入店铺促销信息(可暂时不填)"/>
    
    <EditText 
        android:id="@+id/et_shop_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:hint="联系电话"/>
    
    <Button 
        android:id="@+id/btn_create_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建小菜店铺"/>
    

</LinearLayout>
